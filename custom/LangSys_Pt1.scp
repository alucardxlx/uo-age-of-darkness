elseif (strmatch("left","<args>"))||(strmatch("drift right","<args>"))||(strmatch("right","<args>"))||(strmatch("back","<args>"))||(strmatch("backward","<args>"))||(strmatch("backwards","<args>"))||(strmatch("foreward","<args>")) 
