elseif (strmatch("unfurl sail","<args>"))||(strmatch("furl sail","<args>"))||(strmatch("turn left","<args>"))||(strmatch("port","<args>"))||(strmatch("turn right","<args>"))||(strmatch("starboard","<args>"))||(strmatch("drift left","<args>")) 
